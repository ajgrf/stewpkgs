aptdepends="$aptdepends meson ninja-build patchelf"

configure_phase() {
	mkdir build
	meson --prefix "$pkgdir" --libdir lib build
	cd build
}

build_phase() {
	ninja
}

install_phase() {
	ninja install
}

postinstall_phase() {
	find "$pkgdir" -type f -executable -print0 |
		xargs -0 -n 1 patchelf --set-rpath "$prefix/lib"
}
